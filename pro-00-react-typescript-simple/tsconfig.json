{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", /* compilerOptions.jsx must be react-jsx (to support the new JSX transform in React 17) */
    "allowJs": true,
    "baseUrl": "src",
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "types"
  ],
  "include": [
    "src"
  ]
}
